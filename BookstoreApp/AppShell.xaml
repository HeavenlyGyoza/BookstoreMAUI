<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookstoreApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookstoreApp"
    xmlns:views="clr-namespace:BookstoreApp.MVVM.Views.NavigationPages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="User" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:UserPage}" Route="UserPage" />
        </Tab>
    </TabBar>


</Shell>
