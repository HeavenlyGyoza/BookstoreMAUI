<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Bookstore_MAUI.MVVM.ViewModels"
             x:Class="BookstoreApp.MVVM.Views.NavigationPages.UserPage">
    <VerticalStackLayout>

        <Button x:Name="signInButton"
                Text="Sign in"
                Command="{Binding ToLoginPageCommand}"/>

        <Grid x:Name="userGrid"
              ColumnDefinitions="*, *"
              RowDefinitions="*, *"
              IsVisible="False">

            <Button Grid.Column="0"
                    Grid.Row="0"
                    Text="Log out"
                    Command="{Binding LogOutCommand}"/>
            <Button Grid.Column="1"
                    Grid.Row="0"
                    Text="My Order history"/>
            <Button Grid.Column="0"
                    Grid.Row="1"
                    Text="Account settings"/>
            <Button Grid.Column="1"
                    Grid.Row="1"
                    Text="My Wishlists"/>
        </Grid>
        
        <VerticalStackLayout>
            <Label Text="Order History" FontSize="Medium" Margin="0,10"/>
            <CollectionView x:DataType="vm:OrderViewModel" ItemsSource="{Binding Orders}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding SelectedBook.Title}" FontAttributes="Bold"/>
                            <Label Text="{Binding OrderDate}" />
                            <Label Text="{Binding Quantity}" />
                            <Label Text="{Binding Price, StringFormat='{0:C}'}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        
    </VerticalStackLayout>
</ContentPage>